@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="jumbotron">
  <h2>Engineers</h2>
</div>

@if (Model.Count == 0)
{
  <p>No engineers have been added to the database yet.</p>
}
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.FirstName} {engineer.LastName}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
}
<hr>
<div class="link-buttons">
  <a class="btn btn-primary btn-lg" href="~/Engineers/Create">Add new engineer</a>
</div>