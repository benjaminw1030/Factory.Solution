@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="jumbotron">
  <h2>Machines</h2>
</div>

@if (Model.Count == 0)
{
  <p>No machines have been added to the database yet.</p>
}
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
    }
  </ul>
}
<hr>
<div class="link-buttons">
  <a class="btn btn-primary btn-lg" href="~/Machines/Create">Add new machine</a>
</div>