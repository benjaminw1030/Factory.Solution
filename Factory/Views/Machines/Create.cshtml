@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="jumbotron">
  <h2>Add a new machine</h2>
</div>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Function)
    @Html.TextBoxFor(model => model.Function, new { @class = "form-control" })
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.CalibrationDate)
    @Html.TextBoxFor(model => model.CalibrationDate, new { type = "date" , @class = "form-control" })
  </div>

  <hr>
  <div class="link-buttons">
    <input type="submit" value="Add Machine" class="btn btn-primary btn-lg" />
  </div>
}