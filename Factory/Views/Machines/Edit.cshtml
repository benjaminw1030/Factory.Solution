@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="jumbotron">
  <h2>Editing @Model.Name</h2>
</div>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Function)
    @Html.TextBoxFor(model => model.Function, new { @class = "form-control" })
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.CalibrationDate)
    @Html.EditorFor(model => model.CalibrationDate, new { htmlAttributes = new { @class = "form-control" } })
  </div>

  <hr>
  <div class="link-buttons">
    <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
  </div>
}